<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orange.mapper.EmpMapper">
<!--    所有逗号都放在 <if> 标签内部，让MyBatis的 <set> 标签自动处理逗号问题。
这样写既清晰又安全，避免了手动控制逗号可能导致的SQL语法错误。-->
<!--     LocalDateTime 类型与空字符串进行比较，这是不允许的-->
<!--     把where id = #{id}忘记了导致更新不了-->
<!--status是Integer类型，不应该与空字符串比较-->
    <update id="update" parameterType="com.orange.entity.Emp">
        update employee
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="username != null and username != ''">username = #{username},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="phone != null and phone != ''" >phone = #{phone},</if>
            <if test="sex != null and sex != ''">sex = #{sex},</if>
            <if test="idNumber != null and idNumber != ''">id_Number = #{idNumber},</if>
            <if test="updateTime != null ">update_Time = #{updateTime},</if>
            <if test="updateUser != null ">update_User = #{updateUser},</if>
            <if test="status != null ">status = #{status},</if>
        </set>
        where id = #{id}
    </update>
    <select id="pageQuery" resultType="com.orange.entity.Emp">
        select * from employee
        <where>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
        </where>
        order by create_time desc
    </select>
<!--  分页共  根据名字模糊查询 -->

</mapper>